# SimWorld Career Development Platform - Backend Environment Variables
# Copy this file to .env and update the values with your actual keys

# ⚠️  IMPORTANT: Add your OpenAI API key here ⚠️
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///simulation.db
# For PostgreSQL production:
# DATABASE_URL=postgresql://username:password@localhost/simworld_db

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_APP=app.py

# Server Configuration
HOST=localhost
PORT=5000

# CORS Configuration (for frontend)
CORS_ORIGINS=["http://localhost:3000"]

# AI Configuration
# OpenAI Model Settings
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Logging
LOG_LEVEL=INFO

# Optional: Other AI Services
# ANTHROPIC_API_KEY=your-anthropic-key-here
# GOOGLE_API_KEY=your-google-ai-key-here
